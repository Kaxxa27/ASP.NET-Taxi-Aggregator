@*@model TaxiApplication.Domain.Entity.TaxiOrder*@
@model TaxiApplication.BLL.ViewModels.TaxiOrderViewModel
@{
	ViewBag.Title = "CreatingTaxiOrder";
}

<!DOCTYPE html>
<html>
<head>
	<title></title>
	<meta charset="utf-8" />
</head>
<body>
	<form asp-controller="Map" asp-action="CreateTaxiOrder" method="post" asp-area="">
		<p>
			<label asp-for="Route.Description"></label>
			<input asp-for="Route.Description" />
		</p>
		<p>
			<label asp-for="Route.StartLocation"></label>
			<input asp-for="Route.StartLocation" data-val-required="Введите начальную точку маршрута." />
			<span asp-validation-for="Route.StartLocation" />

		</p>
		<p>
			<label asp-for="Route.EndLocation"></label>
			<input asp-for="Route.EndLocation" data-val-required="Введите конечную точку маршрута." />
			<span asp-validation-for="Route.EndLocation" />
		</p>
		@if (Model is not null)
		{
			<input hidden="hidden" name="Route.TaxiOrderId" value="@Model.Id" />
		}
		<fieldset>
			<legend>Ваши предпочтения:</legend>

			<table>
				<tr>
					<td>
						<div>
						<input type="checkbox" asp-for="Order.IsPetFriendly" checked>
						<label asp-for="Order.IsPetFriendly"></label>
						</div>
					</td>
					<td>
						<div>
						<input type="checkbox" asp-for="Order.IsMusicPreferenceNeeded">
						<label asp-for="Order.IsMusicPreferenceNeeded"></label>
						</div>
					</td>
					<td>
						<div>
						<input type="checkbox" asp-for="Order.IsChildSeatNeeded">
						<label asp-for="Order.IsChildSeatNeeded"></label>
						</div>
					</td>
				</tr>
				<tr>
					<td>
						<div>
						<input type="checkbox" asp-for="Order.IsAirConditioningNeeded">
						<label asp-for="Order.IsAirConditioningNeeded"></label>
						</div>
					</td>
					<td>
						<div>
							<input type="checkbox" asp-for="Order.IsBaggageAssistanceNeeded">
						<label asp-for="Order.IsBaggageAssistanceNeeded"></label>
						</div>
					</td>
					<td>
						<div>
						<input type="checkbox" asp-for="Order.IsMeetAndGreetNeeded">
						<label asp-for="Order.IsMeetAndGreetNeeded"></label>
						</div>
					</td>
				</tr>
			</table>
		</fieldset>
		<p>
			<input type="submit" value="CreateTaxiOrder" />
		</p>
	</form>

	@*Скрипты для валидации свойств модели на строное клиента.*@
	<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
	@*<div asp-validation-summary="All"></div>*@
</body>
</html>
