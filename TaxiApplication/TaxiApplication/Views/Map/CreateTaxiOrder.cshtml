@model TaxiApplication.Domain.Entity.TaxiOrder
@{
	ViewBag.Title = "CreatingTaxiOrder";
}

<!DOCTYPE html>
<html>
<head>
	<title></title>
	<meta charset="utf-8" />
</head>
<body>
	@*@await Html.PartialAsync("BuildRoute")*@
	<form asp-controller="Map" asp-action="CreateTaxiOrder" method="post" asp-area="">
		<p>
			<p>
				<label asp-for="CurrentRoute.Description"></label>
				<input asp-for="CurrentRoute.Description" />
			</p>
			<p>
				<label asp-for="CurrentRoute.StartLocation"></label>
				<input asp-for="CurrentRoute.StartLocation" data-val-required="Введите начальную точку маршрута." />
				<span asp-validation-for="CurrentRoute.StartLocation"/>

			</p>
			<p>
				<label asp-for="CurrentRoute.EndLocation"></label>
				<input asp-for="CurrentRoute.EndLocation" data-val-required="Введите конечную точку маршрута." />
				<span asp-validation-for="CurrentRoute.EndLocation" />
			</p>
			@if (Model is not null)
			{
				<input hidden="hidden" name="CurrentRoute.TaxiOrderId" value="@Model.Id" />
			}
			<fieldset>
				<legend>Ваши предпочтения:</legend>

				<table>
					<tr>
						<td>
							<div>
								<input type="checkbox" asp-for="IsPetFriendly" checked>
								<label asp-for="IsPetFriendly"></label>
							</div>
						</td>
						<td>
							<div>
								<input type="checkbox" asp-for="IsMusicPreferenceNeeded">
								<label asp-for="IsMusicPreferenceNeeded"></label>
							</div>
						</td>
						<td>
							<div>
								<input type="checkbox" asp-for="IsChildSeatNeeded">
								<label asp-for="IsChildSeatNeeded"></label>
							</div>
						</td>
					</tr>
					<tr>
						<td>
							<div>
								<input type="checkbox" asp-for="IsAirConditioningNeeded">
								<label asp-for="IsAirConditioningNeeded"></label>
							</div>
						</td>
						<td>
							<div>
								<input type="checkbox" asp-for="IsBaggageAssistanceNeeded">
								<label asp-for="IsBaggageAssistanceNeeded"></label>
							</div>
						</td>
						<td>
							<div>
								<input type="checkbox" asp-for="IsMeetAndGreetNeeded">
								<label asp-for="IsMeetAndGreetNeeded"></label>
							</div>
						</td>
					</tr>
				</table>
			</fieldset>
		</p>
		<p>
			<input type="submit" value="CreateTaxiOrder" />
		</p>
	</form>

	@*Скрипты для валидации свойств модели на строное клиента.*@
	<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
	@*<div asp-validation-summary="All"></div>*@
</body>
</html>
